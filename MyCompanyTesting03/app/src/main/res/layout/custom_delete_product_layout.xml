<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/group"
        android:padding="@dimen/profile_margin"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="@string/productName"
            android:textSize="19sp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/profile_margin"
            android:id="@+id/product_name01"
            android:textColor="@color/white"
            android:layout_weight="0.1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:background="#d5384760"
            android:id="@+id/delete_product01"
            android:textColor="@color/white"
            android:layout_weight="0.01"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/profile_margin">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightGray"
            />
    </LinearLayout>

</LinearLayout>